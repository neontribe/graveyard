 * Implements hook_theme().
 */
function nt2_node_type_theme() {
  return array(
    'nt2_node_type_slideshow' => array(
      'variables' => array(
        'items' => NULL,
      ),
      'template' => 'templates/nt2_node_type_slider',
    ),
  );
}

function nt2_node_type_preprocess_nt2_node_type_slideshow(&$vars) {
    // This function SHOULD be used to tweak variables but we will use it to inject JS.
    // We could do thei in the entity load hook or a page alter hook.

    // We should check if the flex slider js all ready in scope.  Most site include it by default.
    drupal_add_js(
        drupal_get_path('module', 'nt2_node_type') . '/javascript/jquery.flexslider.js',
        array(
            'type' => 'file',
            'scope' => 'footer',
            'weight' => 100,
        )
    );
    drupal_add_js(
        drupal_get_path('module', 'nt2_node_type') . '/javascript/nt2_node_type.js',
        array(
            'type' => 'file',
            'scope' => 'footer',
            'weight' => 110,
        )
    );
    drupal_add_css(
        drupal_get_path('module', 'nt2_node_type') . '/javascript/flexslider.css',
        array('group' => CSS_DEFAULT, 'every_page' => FALSE)
    );
}
